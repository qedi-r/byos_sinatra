<div class="flex-grow sticky top-14 z-20 px-4 md:px-8 backdrop-blur-md max-w-3xl">
  <div class="my-4">
    <div class="flex mb-4">
      <div class="flex flex-grow items-center">
        <div class="flex flex-col">
          <h2 class="font-medium text-gray-900 text-lg md:text-2xl mb-0.5 leading-none">Create a schedule</h2>
        </div>
      </div>
    </div>
  </div>

  <form autocomplete="off" action="/schedule" accept-charset="UTF-8" method="post">
    <div class="rounded-xl bg-gray-50 shadow-sm border mb-6 divide-y divide-gray-200">
      <div class="p-6">
        <label for="schedule_start_time" class="block text-gray-700 text-md leading-4 font-medium mb-2">Start time</label>
        <input 
          type="time" 
          required="true" 
          name="schedule[start_time]" 
          id="schedule_start_time" 
          value="<%= @schedule.start_time %>" class="block mt-2 min-h-12 px-4 rounded-xl text-black bg-white block w-full p-0 outline-none text-sm border border-gray-300 focus:outline-none ring-2 ring-transparent focus:ring-2 ring-offset-gray-200 focus:ring-offset-2 focus:ring-offset-gray-200 focus:ring-blue-500 focus:border-transparent transition duration-150" 
          placeholder="">
      </div>
      <div class="p-6">
        <label for="schedule_end_time" class="block text-gray-700 text-md leading-4 font-medium mb-2">End time</label>
        <input 
          type="time" 
          required="true" 
          name="schedule[end_time]" 
          id="schedule_end_time" 
          value="<%= @schedule.end_time %>" class="block mt-2 min-h-12 px-4 rounded-xl text-black bg-white block w-full p-0 outline-none text-sm border border-gray-300 focus:outline-none ring-2 ring-transparent focus:ring-2 ring-offset-gray-200 focus:ring-offset-2 focus:ring-offset-gray-200 focus:ring-blue-500 focus:border-transparent transition duration-150" 
          placeholder="">
      </div>
      <div class="p-6">
        <label for="schedule_interruptible" class="block text-gray-700 text-md leading-4 font-medium mb-2">Interruptible for events</label>
        <input 
          autofocus 
          type="checkbox" 
          required="true" 
          name="schedule[interruptible]" 
          <% if @schedule.interruptible || @new_schedule %>
          checked
          <% end %>
          id="schedule_interruptible" 
          class="block mt-2 min-h-12 px-4 rounded-xl text-black bg-white block w-full p-0 outline-none text-sm border border-gray-300 focus:outline-none ring-2 ring-transparent focus:ring-2 ring-offset-gray-200 focus:ring-offset-2 focus:ring-offset-gray-200 focus:ring-blue-500 focus:border-transparent transition duration-150" 
          placeholder="date,image">
      </div>
      <div class="p-6">
        <label for="schedule_update_frequency" class="block text-gray-700 text-md leading-4 font-medium mb-2">Update frequency (minutes)</label>
        <input 
          autofocus 
          type="text" 
          required="true" 
          name="schedule[update_frequency]" 
          id="schedule_update_frequency" 
          class="block mt-2 min-h-12 px-4 rounded-xl text-black bg-white block w-full p-0 outline-none text-sm border border-gray-300 focus:outline-none ring-2 ring-transparent focus:ring-2 ring-offset-gray-200 focus:ring-offset-2 focus:ring-offset-gray-200 focus:ring-blue-500 focus:border-transparent transition duration-150" 
          placeholder="30">
          * Accepted values: 5, 10, 15, 30, 60, 120
      </div>
      <div class="p-6">
        <label for="schedule_plugins" class="block text-gray-700 text-md leading-4 font-medium mb-2">Plugins (comma separated)</label>
        <input 
          autofocus 
          type="text" 
          required="true" 
          name="schedule[plugins]" 
          id="schedule_plugins" 
          class="block mt-2 min-h-12 px-4 rounded-xl text-black bg-white block w-full p-0 outline-none text-sm border border-gray-300 focus:outline-none ring-2 ring-transparent focus:ring-2 ring-offset-gray-200 focus:ring-offset-2 focus:ring-offset-gray-200 focus:ring-blue-500 focus:border-transparent transition duration-150" 
          placeholder="date,image">
      </div>
      <div class="p-6 text-right">
        <input 
          type="submit" 
          name="commit" 
          value="Save" 
          class="cursor-pointer font-medium rounded-lg text-sm px-3 py-2 inline-flex items-center transition duration-150 justify-center shrink-0 gap-1.5 whitespace-nowrap text-white bg-blue-500 hover:bg-blue-600 focus:outline-none">
      </div>
    </div>
  </form>
</div>

