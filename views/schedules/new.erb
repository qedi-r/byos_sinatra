<div class="flex-grow sticky top-14 z-20 px-4 md:px-8 backdrop-blur-md max-w-3xl">
  <div class="my-4">
    <div class="flex mb-4">
      <div class="flex flex-grow items-center">
        <div class="flex flex-col">
          <h2 class="font-medium text-gray-900 text-lg md:text-2xl mb-0.5 leading-none">Create a schedule</h2>
        </div>
      </div>
    </div>
  </div>

    <%= forme(@schedule, action: '/schedules') do |f|
        f.input :start_time, label: "Start time"
        f.input :end_time, label: "End Time"
        f.input :interruptible, type: :checkbox, label: "Interruptible"

        f.input :plugins, label: 'Plugins (comma separated)'
        f.button 'Create Schedule'
      end
    %>
  </div>
</div>

